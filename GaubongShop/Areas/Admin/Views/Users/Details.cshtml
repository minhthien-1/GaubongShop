@model GaubongShop.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        .bg-cam{
            background-color:navajowhite;
        }
        .upd a{
            color:white
        }
        .name b{
            font-weight:bold!important;
        }
    </style>
</head>
<h2 class="bg-cam">CHI TIẾT TÀI KHOẢN</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="name col-sm-2">
            <b>Tên tài khoản</b>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt class="name col-sm-2">
          <b>Mật khẩu</b>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt class="name col-sm-2">
            <b>Vai trò</b>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRole)
        </dd>

    </dl>
</div>
<p class="upd">
    @Html.ActionLink("Sửa", "Edit", new { id = Model.IDUser }, new {@class="btn btn-default btn-sm",@style="background-color:burlywood"}) |
    @Html.ActionLink("Quay lại danh sách", "Index",null, new { @class = "btn btn-default btn-sm", @style = "background-color:burlywood" })
</p>
