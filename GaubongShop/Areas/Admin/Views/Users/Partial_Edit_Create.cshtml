@model GaubongShop.Models.User
<div class="d-flex form-group">
    <div class="control-label col-md-2">
        <b>Tên tài khoản</b>
    </div>
    <div class="col-md-3">
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
    </div>
</div>

<div class="d-flex form-group">
    <div class="control-label col-md-2">
        <b>Mật khẩu </b>
    </div>
    <div class="col-md-3">
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
</div>

<div class="d-flex form-group">
    <div class="control-label col-md-2">
        <b>Vai trò</b>
    </div>
    <div class="col-md-3">
        @Html.EditorFor(model => model.UserRole, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
    </div>
</div>
<br />
<div class="form-group">
    <div class="upd col-md-offset-2 col-md-10">
        <input type="submit" value="Cập nhật" class="nut btn btn-default btn-sm" style="background-color:burlywood" />
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default btn-sm", @style = "background-color:burlywood" })

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
