<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop Online</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        a {
            
            text-decoration: none;
        }
        .navbar-brand{
            font-size:23px; 
        }
        .nav-item {
            font-size: 17px;
        }
          
        
    </style>
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-lg navbar-dark " style="background-color:saddlebrown" >
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Products")">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Categories")">Loại SP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customers")">Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "OrderProes")">Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("OrderStatistics", "Orders")">Thống kê</a>
                        </li>
                    </ul>

                </div>
                <ul class="nav-item" style="text-align:right"> 
                    <li style="padding:0 30px;">
                        <i class="login-cutomer-icon"></i>
                        @if (Session["UserName"] != null)
                        {
                            <a href="@Url.Action("Profile", "Customer")" class="header_gt_item_link fs-5 d-flex link-underline-opacity-0 link-light "> <span style="color: orangered"><strong>Xin chào, @Session["UserName"]!</strong></span> </a>
                            <a href="@Url.Action("Logout", "TaiKhoan")" class="header_gt_item_link fs-5 d-flex link-underline-opacity-0 link-light "><strong>Đăng xuất</strong></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "TaiKhoan")" class="header_gt_item_link fs-5 d-flex link-underline-opacity-0 link-light "><strong>Đăng nhập</strong></a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2" style="background-color:white; min-height: 600px;">

            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>

    </div>
    <div style="background-color:sandybrown; height: 100px; text-align: center; padding: 10px;">
        <h4 style="color:wheat;">
            <b>&copy; @DateTime.Now.Year - Gaubong.com</b>
            <br />
            <b>&copy; @DateTime.Now.Year Minh Thiện, Thái Bảo, Quốc Việt, Thanh Trúc</b>
        </h4>

    </div>

    @RenderSection("Scripts", required: false)



</body>
</html>
