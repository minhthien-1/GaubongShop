<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop Online</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("ProductList", "Products")">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("ProductList", "Products")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Products")">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Categories")">Loại SP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customers")">Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "OrderProes")">Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "OrderProes")">Thông tin</a>
                        </li>
                    </ul>

                </div>
                <ul style="text-align:right">
                    <li>

                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2" style="background-color:white; min-height: 600px;">

            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>

    </div>
    <div style="background-color:sandybrown; height: 100px; text-align: center; padding: 10px;">
        <h4 style="color:wheat;">
            <b>&copy; @DateTime.Now.Year - Gaubong.com</b>
            <br />
            <b>&copy; @DateTime.Now.Year Minh Thiện, Thái Bảo, Quốc Việt, Thanh Trúc</b>
        </h4>

    </div>

    @RenderSection("Scripts", required: false)



</body>
</html>
