@model GaubongShop.Models.ViewModel.ProductSearchVM

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/TrangChuLayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tim kiem</title>
    <style>
        .search-container, order-container{
            padding-top: 20px;
            display:flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <!--Form tìm kiếm-->
    @using (Html.BeginForm("ProductList", "Products", FormMethod.Get))
            {
                <div class="form-group search-container">
                    @Html.TextBoxFor(m => m.SearchTerm, new { 
               @class="form-control",
               placeholder = "Nhập sản phầm cần tìm"
               })
                    @Html.TextBoxFor(m => m.MinPrice, new
               {
                   @class = "form-control",
                   placeholeder="Nhập giá tối thiểu", type = "number"
                    })
                    @Html.TextBoxFor(m => m.MaxPrice, new { 
               @class= "form-control",
               placeholeder= "Nhập giá tối đa", type="number"})
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </div>
                <div class="form-group order-container">
                    Sắp xếp theo:
                    @Html.ActionLink("Tên tăng dần", "ProductList", "Products",
                   new
                        {
                            sortOrder = "name_asc",
                   searchTerm = Model.SearchTerm,
                   minPrice = Model.MinPrice,
                   maxPrice = Model.MaxPrice
                        }, null) |
                    @Html.ActionLink("Tên giảm dần", "ProductList", "Products",
                   new
                        {
                            sortOrder = "name_desc",
                    searchTerm = Model.SearchTerm,
                    minPrice = Model.MinPrice,
                    maxPrice = Model.MaxPrice
                        }, null) |
                    Sắp xếp theo:
                    @Html.ActionLink("Giá tăng dần", "ProductList", "Products",
                   new
                        {
                            sortOrder = "price_asc",
                   searchTerm = Model.SearchTerm,
                   minPrice = Model.MinPrice,
                   maxPrice = Model.MaxPrice
                        }, null) |
                    @Html.ActionLink("Giá giảm dần", "ProductList", "Products",
                   new
                        {
                            sortOrder = "price_desc",
                    searchTerm = Model.SearchTerm,
                    minPrice = Model.MinPrice,
                    maxPrice = Model.MaxPrice
                        }, null) 
                </div>
    }
    @Html.Partial("ProductListPV", Model)
</body>
</html>