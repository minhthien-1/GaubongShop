@using PagedList.Mvc;
@model PagedList.IPagedList<GaubongShop.Models.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/TrangChuLayout.cshtml";
}

<div class="row">
    @foreach (var pro in Model)
    {
        <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-pro">
                <p>@Html.DisplayFor(model => pro.ProductID)</p>
                <img src="~/Content/Image/@pro.ProductImage" width="250" height="275" />
                <p>@Html.DisplayFor(model => pro.ProductName)</p>
                <p>Đơn giá : <font color="red">@pro.ProductPrice.ToString("N0")</font></p>

                <p style="text-align: center;">
                    <a class="btn btn-info" href="/Home/ProductDetails/@pro.ProductID"> Chi tiết </a>
                    @*<a href="/Cart/Index/@pro.ProductID" class="btn btn-danger"> Mua </a>*@

                </p>
            </div>
        </div>
    }
</div>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="page">
    <!--Control PagedListPager: mô tả mô hình với số trang là liên kết với tham số "Index" và tham số page-->
    @Html.PagedListPager(Model, page => Url.Action("ProductList", new { page }))
    <!-- Kết thúc -->
</div>
