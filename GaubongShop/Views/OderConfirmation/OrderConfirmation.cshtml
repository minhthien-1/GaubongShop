
@{
    ViewBag.Title = "OrderConfirmation";
    Layout = "~/Views/Shared/TrangChuLayout.cshtml";
}

<h2>Xác nhận đơn hàng</h2>

<div>
    <h4>Thông tin đơn hàng</h4>
    <p><strong>Mã đơn hàng:</strong> @Model.OrderID</p>
    <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Tên khách hàng:</strong> @Model.CustomerName</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
    <p><strong>Trạng thái thanh toán:</strong> @Model.PaymentStatus</p>
</div>

<div>
    <h4>Chi tiết sản phẩm</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h4>Tổng tiền:</h4>
    <p><strong>@Model.TotalAmount.ToString("C")</strong></p>
</div>

<div>
    <a href="@Url.Action("Trangchu", "Home")" class="btn btn-primary">Quay lại trang chủ</a>
</div>
